             x:Class="sp_maui.Views.Account.ConfirmRegisterPage"
             Title="ConfirmRegisterPage">
    <VerticalStackLayout>

        <StackLayout>

            <Label x:Name="lblAppName" Text="Registration Confirmatipon" 
                      HorizontalTextAlignment="Center" FontAttributes="Bold" Padding="30,5,30,5"
                      TextColor="Black" FontSize="18"/>

            <Label x:Name="lblInstruction" Text=""
                      
                      HorizontalTextAlignment="Center" FontAttributes="None"  Padding="20,5,20,5"
                      TextColor="Black" FontSize="15"/>

            <Label x:Name="ReturnToLogin" Text="Return to Login Screen" TextColor="Blue" FontSize="18" HorizontalOptions="CenterAndExpand" Padding="30,10,30,10"/>
            <Label Text=""></Label>

        </StackLayout>

