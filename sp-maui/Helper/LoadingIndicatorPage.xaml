<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sp_maui.LoadingIndicatorPage"
             BackgroundColor="White">

    <VerticalStackLayout>

        <StackLayout
            Padding="30"
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <ActivityIndicator IsRunning="True" Color="DarkGray" />
            <Label
                x:Name="lblLoadingMessage"
                FontAttributes="Bold"
                Text="Please wait..."
                TextColor="DarkGray" />
        </StackLayout>

    </VerticalStackLayout>

</ContentPage>
